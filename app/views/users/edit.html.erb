<h3 class="ui center aligned container">Edit Your - <em> Profile </em> </h3>
<h4 class="ui center aligned medium icon header">
  <i class="circular blue steam symbol icon"></i>
  Edit your settings
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html:{ class: "ui form", role: "form" }, url: login_path ) do |f| %>
      <div class="field">
        <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: @user.username %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "New password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Update Profile", class: "ui blue submit button" %>
        <% end %>

    </div>
    <div class="middle aligned column">

              <%= link_to 'Delete Account', user_path, class: "ui red submit button", method: :delete, onclick: "return confirm('Are you sure?')"  %>

    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
