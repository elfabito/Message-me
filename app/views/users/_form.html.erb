
<%= form_with(model: @user,html:{ class: "ui form", role: "form" }, local:true, data: { turbo: false }) do |f| %>
<div class="field">
  <%= f.label :username, "Username" %>
    <div class="ui left icon input">
      <%= f.text_field :username, placeholder: "Create Username" %>
      <i class="user icon"></i>
    </div>
  </div>
  <div class="field">
    <%= f.label :password, "Password" %>
    <div class="ui left icon input">
      <%= f.password_field :password, placeholder: "Choose a Password" %>
      <i class="lock icon"></i>
    </div>
  </div>
  <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"ui blue submit button") %>
  <% end %>
