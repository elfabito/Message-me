<h3 class="ui center aligned container">Welcome to message me - <em> a complete Chat App </em> </h3>
<h4 class="ui center aligned medium icon header">
  <i class="circular blue themeisle icon"></i>
  Create new user to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="ui middle aligned column">
      <%= link_to 'Login', login_path, class: "ui blue submit button" %>
    </div>
    <div class="middle aligned column">
      <div class="column">
        <%= form_with(model: @user,html:{ class: "ui form", role: "form" }, local:true, data: { turbo: false }, url: signup_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Create Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, "Password" %>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "Choose a Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.button "Create", class: "ui blue submit button" %>
          <% end %>
      </div>

    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
