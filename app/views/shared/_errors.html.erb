<% if obj.errors.any? %>
  <div class="ui message transition">
    <h3 class="ui center aligned container">The following errors prevented the <%= obj.class.name.downcase %> from being saved</h3>

    <i class="close icon"></i>


    <% obj.errors.full_messages.each do |msg| %>
          <ul>
           <%= msg %>
          </ul>
    <% end %>

    </div>

<% end %>
